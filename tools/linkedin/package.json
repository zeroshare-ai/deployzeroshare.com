{
  "name": "zeroshare-linkedin-tools",
  "version": "1.0.0",
  "description": "LinkedIn automation tools for ZeroShare marketing",
  "type": "module",
  "scripts": {
    "auth": "node auth.js",
    "auth:page-manager": "node auth-page-manager.js",
    "generate": "node generate-content.js",
    "generate:viral": "node generate-viral.js",
    "generate:executive": "node generate-executive.js",
    "generate:strategic": "node generate-strategic.js",
    "generate:rebuild": "node generate-strategic.js --replace",
    "generate:whitepapers": "node generate-whitepapers.js",
    "generate:all": "node generate-content.js && node generate-whitepapers.js && node generate-viral.js && node generate-executive.js",
    "preview": "node post.js --dry-run",
    "post": "echo 'Use: node post.js --live (requires explicit authorization)'",
    "post:next": "node post-next.js",
    "post:auto": "node post-next.js",
    "profile:get": "node company-profile.js --get",
    "profile:preview": "node company-profile.js --preview",
    "profile:update": "node company-profile.js --update",
    "profile:logo": "node company-profile.js --logo",
    "campaign:preview": "node campaign.js --dry-run",
    "campaign:create": "echo 'Use: node campaign.js --live (requires explicit authorization)'",
    "followers:preview": "node campaign-follower.js --preview",
    "followers:create": "node campaign-follower.js --create",
    "followers:status": "node campaign-follower.js --status",
    "retargeting:setup": "node campaign-retargeting.js",
    "report": "node report-weekly.js",
    "report:json": "node report-weekly.js --json",
    "content:audit": "node review-content.js --audit",
    "content:score": "node review-content.js --score",
    "content:sort": "node review-content.js --sort"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "open": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
